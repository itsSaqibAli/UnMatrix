<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/matrix_cal"
    android:orientation="vertical"
    android:background="@color/grey_main">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter rows x columns : "
        android:paddingTop="35sp"
        android:layout_marginVertical="25sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:fontFamily="serif-monospace"
        android:textSize="25sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="50sp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:hint="rows"
            android:fontFamily="serif"
            android:inputType="number"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textColorHint="#9C9C9C"
            android:textCursorDrawable="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" x "
            android:textColor="@color/white" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:hint="columns"
            android:fontFamily="serif"
            android:textAlignment="center"
            android:inputType="number"
            android:textColor="@color/white"
            android:textColorHint="#9C9C9C"
            android:textCursorDrawable="@color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insert Elements of Row 1"
        android:fontFamily="monospace"
        android:paddingVertical="15sp"
        android:textSize="25sp"
        android:textAlignment="center"
        android:textColor="@color/white" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingVertical="10sp"
        android:text="(The elements of the row must be separated\nwith single spaces)"
        android:fontFamily="serif"
        android:textColor="#CDCDCD"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="25sp">
        <EditText
            android:layout_width="270sp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:id="@+id/rowdata"
            android:textCursorDrawable="@color/white"
            android:textColor="@color/white"
            android:hint=" 00  01  02  03  04  05  06  07  08"
            android:cursorVisible="true"
            android:textStyle="italic"
            android:backgroundTint="@color/pinky"
            android:inputType="text">
        </EditText>
        <Button
            android:id="@+id/button"
            android:layout_width="58sp"
            android:layout_height="65dp"
            android:text="OK"
            android:textSize="18sp"
            android:padding="0dp"
            android:backgroundTint="@color/pinky"
            android:gravity="center"
            android:textColor="@android:color/white"/>


    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calculateButton"
        android:backgroundTint="@color/pinky"
        android:layout_marginTop="180sp"
        android:layout_gravity="center"
        android:text="Calculate"
        android:textSize="27sp"
        />
</LinearLayout>