<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/matrix_sol"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_main">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="35sp"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_margin="1dp"
            android:layout_marginVertical="25sp"
            android:background="@color/grey_main"
            android:fontFamily="serif-monospace"
            android:lineSpacingExtra="10sp"
            android:paddingRight="10sp"
            android:paddingTop="5sp"
            android:text=" 00 01 02 03 04 05 06 07 08 09\n
00 01 02 03 04 05 06 07 08 09\n
00 01 02 03 04 05 06 07 08 09\n
00 01 02 03 04 05 06 07 08 09\n
00 01 02 03 04 05 06 07 08 09\n
00 01 02 03 04 05 06 07 08 09\n
00 01 02 03 04 05 06 07 08 09\n
00 01 02 03 04 05 06 07 08 09\n
00 01 02 03 04 05 06 07 08 09\n
00 01 02 03 04 05 06 07 08 09\n"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18sp" />
        </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter rows x columns : "
        android:paddingTop="35sp"
        android:layout_marginVertical="25sp"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:fontFamily="serif-monospace"
        android:textSize="25sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingVertical="25sp">
        <Spinner
            android:id="@+id/toolsSpinner"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:scrollbarSize="50dp"/>
        <Button
            android:id="@+id/button"
            android:layout_width="58sp"
            android:layout_height="65dp"
            android:text="OK"
            android:textSize="18sp"
            android:padding="0dp"
            android:backgroundTint="@color/pinky"
            android:gravity="center"
            android:textColor="@android:color/white"/>


    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calculateButton"
        android:backgroundTint="@color/pinky"
        android:layout_marginTop="0sp"
        android:layout_gravity="center"
        android:text="Show"
        android:textSize="27sp"
        />
</LinearLayout>