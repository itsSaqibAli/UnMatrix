<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/matrix_sol"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/grey_main">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="360sp"
       android:orientation="vertical"
       android:gravity="center">
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:layout_gravity="center"
           android:layout_marginTop="0sp"
           android:background="@color/white">

           <TextView
               android:id="@+id/matrixGrid"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="1dp"
               android:layout_marginVertical="25sp"
               android:background="@color/grey_main"
               android:fontFamily="serif-monospace"
               android:lineSpacingExtra="8sp"
               android:padding="10sp"
               android:textAlignment="center"
               android:textColor="@color/white"
               android:textSize="18sp" />
       </LinearLayout>
   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:paddingTop="0sp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/matrixKey"
            android:paddingLeft="40sp"
            android:text="Determinant : "
            android:textStyle="italic"
            android:paddingTop="20sp"
            android:layout_marginVertical="25sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:fontFamily="serif-monospace"
            android:textSize="25sp"
            />

       <TextView
           android:id="@+id/matrixValue"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginVertical="0sp"
           android:fontFamily="serif-monospace"
           android:paddingTop="20sp"
           android:paddingRight="40sp"
           android:text="NULL"
           android:textAlignment="center"
           android:textColor="@color/white"
           android:textSize="25sp" />

   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingVertical="25sp">
        <Spinner
            android:id="@+id/toolsSpinner"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:scrollbarSize="50dp"/>
        <Button
            android:id="@+id/button"
            android:layout_width="58sp"
            android:layout_height="65dp"
            android:text="OK"
            android:textSize="18sp"
            android:padding="0dp"
            android:backgroundTint="@color/pinky"
            android:gravity="center"
            android:textColor="@android:color/white"/>


    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calculateButton"
        android:backgroundTint="@color/pinky"
        android:layout_marginTop="0sp"
        android:layout_gravity="center"
        android:text="Show"
        android:textSize="27sp"
        />
</LinearLayout>